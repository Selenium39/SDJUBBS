<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selenium.sdjubbs.common.mapper.UserMapper">
    <insert id="addUser" useGeneratedKeys="true" parameterType="User">
        insert into user(username,password,salt,age,gender,email,phone,head_picture,register_time,last_login_time,status,role)
        values (#{username},#{password},#{salt},#{age},#{gender},#{email},#{phone},#{headPicture},#{registerTime},#{lastLoginTime},#{status},#{role})
    </insert>
    <select id="getUserByUsername" parameterType="String" resultType="User">
        select id,username,password,salt,age,gender,email,phone,head_picture,register_time,last_login_time,status,role
        from user
        where username = #{username}
    </select>
    <select id="getUserByEmail" parameterType="String" resultType="User">
        select username,password,salt,age,gender,email,phone,head_picture,register_time,last_login_time,status,role
        from user
        where email = #{email}
    </select>
    <select id="getAllUser" resultType="User">
        select id,username,age,gender,email,phone,head_picture,register_time,last_login_time,status,role
        from user
    </select>
    <select id="getUserById" parameterType="Integer" resultType="User">
        select username,password,salt,age,gender,email,phone,head_picture,register_time,last_login_time,status,role
        from user
        where id = #{id}
    </select>
    <update id="updateUser" parameterType="User">
        update user
        <set>
            <if test="id!=null">
                id = #{id},
            </if>
            <if test="username!=null">
                username = #{username},
            </if>
            <if test="password!=null">
                password = #{password},
            </if>
            <if test="salt!=null">
                salt = #{salt},
            </if>
            <if test="age!=null">
                age = #{age},
            </if>
            <if test="gender!=null">
                gender = #{gender},
            </if>
            <if test="email!=null">
                email = #{email},
            </if>
            <if test="phone!=null">
                phone = #{phone},
            </if>
            <if test="headPicture!=null">
                head_picture = #{headPicture},
            </if>
            <if test="lastLoginTime!=null">
                last_login_time = #{lastLoginTime},
            </if>
            <if test="status!=null">
                status = #{status},
            </if>
            <if test="role!=null">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUser" parameterType="Integer">
        delete from user where id = #{id}
    </delete>
</mapper>